<!DOCTYPE html>
<html>
	<head>
	  <title>SampleApp</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%#= javascript_include_tag :defaults %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

	<div class="navbar">
	  <div class="container">
	  	<% if current_user.present? %>
	  		<%= link_to "Users", users_path, :class => "navbar-brand" %>
		  	<%= link_to "Categories", categories_path, :class => "navbar-brand" %>
				<%= link_to "Products", products_path, :class => "navbar-brand"%>
				<%= link_to "Logout", destroy_user_session_path, :class => "navbar-brand", :method => :delete %>
			<% else %>
				<%= link_to "Login", "", :class => "navbar-brand"%>
			<% end %>
	  </div>
	</div>

	<%= yield %>
	
	</body>
</html>
